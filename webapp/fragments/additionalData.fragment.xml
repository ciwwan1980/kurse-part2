<core:FragmentDefinition
xmlns="sap.m" 
xmlns:core="sap.ui.core" 
xmlns:f="sap.ui.layout.form"
>

<f:SimpleForm editable="true" id="idNew">
		
    <f:content>	
        <Label text="Name" />
        <Text text="{local>name}"/>
        <Label text="Type" />
        <Text text="{local>type}" />
        <Label text="Price" />
        <Text text="{local>price}"/>
        <Label text="Color" />
        <Text text="{local>color}"/>
    </f:content>
</f:SimpleForm>	
</core:FragmentDefinition>
				